@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
    <a asp-area="Admin" asp-action="Create" asp-controller="Category" class="btn btn-primary">Create</a>
</div>

<br />
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date Created</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@Html.Raw(@item.Description)</td>
            <td>@item.CreatedTime</td>
            <td>
                <a asp-area="Admin" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                <a asp-area="Admin" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
