@model OrderVM
@using MyShop.Utilities;
@{
    ViewData["Title"] = "Order Management";
    ViewBag.PageTitle = "Order Management";
    ViewBag.CardTitle = "View Order Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <h4>Pickup Details</h4>
                <input asp-for="OrderHeader.Id" type="hidden" />
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Name</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.Name" type="text" class="form-control"/>
                        <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Phone</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.PhoneNumber" type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Address</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.Address" type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">City</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.City" type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Email</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Order Date</label>
                    <div class="col-md-8">
                        <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.OrderDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Carrier</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.Carrier" type="text" id="carrier" class="form-control" />
                        <span asp-validation-for="OrderHeader.Carrier" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Tracking Number</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.TrackingNumber" id="tracking" type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.TrackingNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Shopping Date</label>
                    <div class="col-md-8">
                        <input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.ShippingDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Session ID</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.SessionId" type="text" readonly class="form-control" />
                        <span asp-validation-for="OrderHeader.SessionId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Payment Intent ID</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.PaymentIntentId" readonly type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.PaymentIntentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Payment Date</label>
                    <div class="col-md-8">
                        <input value="@Model.OrderHeader.PaymentDate.ToShortDateString()" readonly type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.PaymentDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-form-label">Payment Status</label>
                    <div class="col-md-8">
                        <input asp-for="OrderHeader.PaymentStatus" readonly type="text" class="form-control" />
                        <span asp-validation-for="OrderHeader.PaymentStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" asp-action="UpdateOrderDetails" class="btn btn-primary btn-block">Update Pickup Details</button>
                </div>
            </div>

            <div class="col-md-6">
                <h4>Order Summary</h4>
                <button class="btn btn-outline-primary btn-block">Order Status-@Model.OrderHeader.OrderStatus </button>
                <div class="card mt-3">
                    @foreach(var item in Model.OrderDetails)
                    {
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title text-primary">@item.Product.Name</h5>
                                <p class="card-text text-secondary">Price: $@item.Product.Price</p>
                                <p class="card-text text-secondary mb-0">Quantity: @item.Count</p>
                            </div>
                            <span class="text-success">
                                $@(@item.Product.Price * item.Count)
                            </span>
                        </div>
                        <hr class="my-2" /> <!-- Horizontal line -->
                    }
                    
                    <div class="card-footer bg-dark text-white">
                        <h6>Total: $@Model.OrderHeader.TotalPrice</h6>
                    </div>
                </div>
                @if(Model.OrderHeader.OrderStatus == SD.Approve)
                {
                    <input type="submit" class="btn btn-primary" asp-action="StartProccess" value="Start Process" />
                }
                @if(Model.OrderHeader.OrderStatus == SD.Processing)
                {
                    <input type="submit" class="btn btn-success" onclick="return CheckData()" asp-action="StartShip" value="Start Shipping" />
                }
                @if(@Model.OrderHeader.OrderStatus != SD.Cancelled || @Model.OrderHeader.OrderStatus != SD.Refund)
                {
                    <input type="submit" class="btn btn-danger" asp-action="CancelOrder" value="Cancel Order" />
                }
                

            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        function CheckData() {
            if (document.getElementById("carrier").value == '') {
                Swal.fire({
                    title: "There is an error",
                    text: "Please enter carrier number",
                    icon: "error",
                    
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    
                });
                return false;
            }
            if (document.getElementById("tracking").value == '') {
                Swal.fire({
                    title: "There is an error",
                    text: "Please enter tracking number",
                    icon: "error",
                    
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                   
                });
                return false;
            }
            return true;
        }
    </script>
}
