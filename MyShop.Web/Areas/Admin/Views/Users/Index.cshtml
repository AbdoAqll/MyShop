@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    ViewBag.PageTitle = "Users Management";
    ViewBag.CardTitle = "View Users";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
    <a href="/Identity/Account/Register" class="btn btn-primary">Create new user</a>
</div>

<br />
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>PhoneNumber</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>
                @if(item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                {
                    <a asp-action="LockUnlock" asp-controller="Users" class="btn btn-success" asp-route-id="@item.Id">
                        <i class="fas fa-lock-open"></i>
                    </a>
                }
                else
                {
                    <a asp-action="LockUnlock" asp-controller="Users" class="btn btn-danger" asp-route-id="@item.Id">
                        <i class="fas fa-lock"></i>
                    </a>
                }
                
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>